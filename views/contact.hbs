<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/core.css" />
    {{> favicon}}
    <title>Contact</title>
</head>
<body class="h-screen flex justify-center items-center bg-mybg">
    <div class="bg-mybgs1 p-6 w-11/12 md:w-7/12 lg:w-4/12">
        <div class="flex justify-between py-4 items-center">
            <div class="absolute -top-32 left-5 right-5 flex rounded-md bg-teal-600 p-3 text-white transition md:right-auto"
            id="alertSuccess"></div>
            <div class="absolute -top-32 left-5 right-5 flex rounded-md bg-red-400 p-3 text-white transition md:right-auto"
            id="alert"></div>
            <p class="form-header-text text-myaccent text-3xl font-semibold tracking-wider">Contact</p>
        </div>

        <form action="/user/contact" id="myForm" method="post" class="flex font-poppins text-white">
            <div class="flex flex-col w-full" id="form-section-1">
                <label class="text-myaccent mt-2" for="name">Name</label>
                    <input class="my-2 p-3 rounded-sm bg-mybg w-full" type="text" name="name" id="name" placeholder="vedant kale" required />
                <label class="text-myaccent mt-2" for="email">Email</label>
                <input class="my-2 p-3 rounded-sm bg-mybg" type="email" name="email" id="email"
                    placeholder="abc@gmail.com" required />
                <label class="text-myaccent mt-2" for="message">Message</label>
                <textarea name="message" id="message" class="my-2 p-3 rounded-sm bg-mybg resize-none" rows="5" placeholder="your message or issue"></textarea>
                <button id="submitBtn"
                    class="transition-all duration-100 ease hover:opacity-80 active:scale-95 py-3 px-4 bg-myaccent mt-4 rounded-sm uppercase text-black">send</button>
            </div>

        </form>
    </div>
    <script type="text/javascript" src="/js/contact.js"></script>
    {{> developer}}
    {{#if contactSubmit}}
    <script>
    showSuccessMsg('Form submitted successfully!')
    </script>
    {{/if}}
</body>
</html>
